<section>
  <article class="large-6 medium-8 small-12 columns small-centered">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.text_field :login, :autofocus => true, :placeholder => 'Username or Email Address' %></div>

      <div><%= f.submit "Reset Password" %></div>
    <% end %>

    <div class="devise-shared-links"><%= render "devise/shared/links" %></div>
  </article>
</section>

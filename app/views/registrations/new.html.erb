<section>
  <article class="large-6 medium-8 small-12 columns small-centered">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.text_field :username, :placeholder => 'Username',autocorrect: 'off', autocapitalize: 'off', autocomplete: 'off', spellcheck: 'false' %></div>

      <div><%= f.email_field :email, :autofocus => true, :placeholder => 'Email Address (optional)' %></div>

      <div><%= f.password_field :password, :placeholder => 'Password' %></div>

      <div><%= f.password_field :password_confirmation, :placeholder => 'Password (again)' %></div>

      <div><%= f.submit "Sign up" %></div>
    <% end %>

    <div class="devise-shared-links"><%= render "devise/shared/links" %></div>
  </article>
</section>

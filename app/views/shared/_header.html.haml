.top-bar
  %header
    = link_to '', root_path, id: 'logo'

    %nav.main
      %ul.menu
        - if user_signed_in?
          %li= link_to 'All Balances', addresses_path, class: cp(addresses_path)
          %li= link_to 'Recent Transactions', '#', class: ''
          %li.user
            = link_to "#{current_user.display_name}", '#', data: {dropdown: 'd-user'}, class: 'dn-arr'
          %li.current-balance
            Balance
            &asymp;
            $1068.23
            = link_to "USD", '#', data: {dropdown: 'd-fiat'}, class: 'dn-arr lighter'
            %ul#d-fiat.f-dropdown{data: {dropdown_content: ''}}
              %li
                %a.icon.usd{href: '#', title: 'Show values in US Dollar', data: {conversion: 'usd'}} US Dollar
              %li
                %a.icon.eur{href: '#', title: 'Show values in Euros', data: {conversion: 'eur'}} Euros
              %li
                %a.icon.gbp{href: '#', title: 'Show values in Pounds Sterling', data: {conversion: 'gbp'}} Pounds Sterling
              %li
                %a.icon.jpy{href: '#', title: 'Show values in Japanese Yen', data: {conversion: 'jpy'}} Japanese Yen
        - else
          %li.user= link_to 'Sign in', new_user_session_path

    %nav.mobile
      - if user_signed_in?
        = link_to '', '#', data: {dropdown: 'd-mobile'}, id: 'hamburger'
        %ul#d-mobile.f-dropdown{data: {dropdown_content: ''}}
          %li= link_to 'All Balances', addresses_path, class: cp(addresses_path)
          %li= link_to 'Recent Transactions', '#', class: ''

        = link_to "#{current_user.display_name}", '#', data: {dropdown: 'd-user'}, class: 'user dn-arr'

      - else
        = link_to 'Sign in', new_user_session_path, class: 'user'

    - if user_signed_in?
      %ul#d-user.f-dropdown{data: {dropdown_content: ''}}
        %li= link_to 'Account Settings', settings_path
        %li= link_to 'Feedback & Suggestions', 'http://balances.uservoice.com/forums/244164-suggestions', target: '_blank'
        %li= link_to 'Log out', destroy_user_session_path, method: :delete
